  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bielefeld GeoClient",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "./dev/manage.py",
        "FLASK_RUN_HOST": "localhost",
        "FLASK_RUN_PORT": "5000",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "FLASK_MUNIMAP_CONFIG": "../munimap-conf/munimap-app/configs/munimap-local-dev.conf",
        "JAVA_HOME": "/usr/lib/jvm/java-8-openjdk-amd64/"
      },
      "args": [
        "run-munimap"
      ],
      "jinja": true,
    }
  ]
}
